package br.com.mouseweb;

import java.util.Arrays;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.web.client.RestTemplateBuilder;
import org.springframework.context.annotation.Bean;
import org.springframework.web.client.RestTemplate;
import br.com.mouseweb.domain.Cliente;
import br.com.mouseweb.domain.Clima;
import br.com.mouseweb.domain.Ipv4;
import br.com.mouseweb.enums.TipoCliente;
import br.com.mouseweb.repositories.ClienteRepository;
import br.com.mouseweb.repositories.ClimaRepository;

@SpringBootApplication
public class UolApplication {
	
	@Autowired
	private ClienteRepository clienteRepository;
	
	@Autowired
	private ClimaRepository dataRepository;

	private static final Logger log = LoggerFactory.getLogger(UolApplication.class);

	public static void main(String[] args) {
		SpringApplication.run(UolApplication.class, args);
	}

	@Bean
	public RestTemplate restTemplate(RestTemplateBuilder builder) {
		return builder.build();
	}

	@Bean
	public CommandLineRunner run(RestTemplate restTemplate) throws Exception {
		return args -> {
			
			// INSTANCIANDO O CLIENTE
			Cliente cli1 = new Cliente(null, "Douglas Coelho", 25, TipoCliente.PESSOA_JURIDICA);
			Cliente cli2 = new Cliente(null, "Leticia Martins", 23, TipoCliente.PESSOA_FISICA);
			
			clienteRepository.saveAll(Arrays.asList(cli1, cli2));
			
			Clima clima = new Clima(id, ipv4, continent_name, country_name, subdivision_1_name, city_name, latitude, longitude);		

			dataRepository.saveAll(Arrays.asList(clima));

			Ipv4 Clima = restTemplate.getForObject("https://ipvigilante.com/json", Ipv4.class);
			// Ipv4 temp = restTemplate.getForObject("https://www.metaweather.com/api/location/search", Ipv4.class);
			log.info(Clima.toString());
		};

	}
}
