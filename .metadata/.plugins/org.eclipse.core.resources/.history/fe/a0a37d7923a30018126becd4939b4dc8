package br.com.mouseweb;

import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.boot.web.client.RestTemplateBuilder;
import org.springframework.context.annotation.Bean;
import org.springframework.web.client.RestTemplate;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import br.com.mouseweb.domain.Ipv4;

@SpringBootApplication
public class UolApplication implements CommandLineRunner{
	
	private static final Logger log = LoggerFactory.getLogger(UolApplication.class);

	public static void main(String[] args) {
		SpringApplication.run(UolApplication.class, args);
	}
	
	@Bean
	public RestTemplate restTemplate(RestTemplateBuilder builder) {
		return builder.build();
	}

	@Bean
	public CommandLineRunner run() throws Exception {
		
	}

	@Override
	public void run(RestTemplate restTemplate) throws Exception {
		return args -> {
			Ipv4 ipv4 = restTemplate.getForObject(
					"https://ipvigilante.com/json/ipv4/", Ipv4.class);
			log.info(ipv4.toString());
		};
		
	}
}
